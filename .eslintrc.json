{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect" // fixes the React version warning
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off", // fixes the "React must be in scope" error
    "react/jsx-uses-react": "off"
  }
}
